<div class="space-y-8">
  <div class="flex flex-col gap-4 lg:flex-row lg:items-start lg:justify-between">
    <div class="w-full flex-1">
      <%= form_with url: questions_path, method: :get, local: true, html: { class: "flex h-full flex-col rounded-lg border bg-card text-card-foreground shadow-sm" } do |form| %>
        <div class="border-b px-6 py-4">
          <h1 class="text-lg font-semibold leading-tight">Filtros</h1>
          <p class="mt-1 text-sm text-muted-foreground">Refine a lista de questões usando os campos abaixo.</p>
        </div>

        <div class="grid gap-4 px-6 py-5 md:grid-cols-2 xl:grid-cols-4">
          <div class="md:col-span-2 xl:col-span-1">
            <%= form.label :q, "Título", class: "mb-2 block text-sm font-medium text-foreground" %>
            <%= form.text_field :q, value: @filters[:q], placeholder: "Buscar por título", class: "w-full rounded-md border border-input bg-background px-3 py-2 text-sm shadow-sm transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2" %>
          </div>

          <div>
            <%= form.label :difficulty, "Dificuldade", class: "mb-2 block text-sm font-medium text-foreground" %>
            <%= form.select :difficulty, options_for_select(@difficulty_options, @filters[:difficulty]), { include_blank: "Todas" }, class: "w-full rounded-md border border-input bg-background px-3 py-2 text-sm shadow-sm transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2" %>
          </div>

          <div>
            <%= form.label :area, "Área", class: "mb-2 block text-sm font-medium text-foreground" %>
            <%= form.select :area, options_for_select(@area_options, @filters[:area]), { include_blank: "Todas" }, class: "w-full rounded-md border border-input bg-background px-3 py-2 text-sm shadow-sm transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2" %>
          </div>

          <div>
            <%= form.label :theme, "Tema", class: "mb-2 block text-sm font-medium text-foreground" %>
            <%= form.select :theme, options_for_select(@theme_options, @filters[:theme]), { include_blank: "Todos" }, class: "w-full rounded-md border border-input bg-background px-3 py-2 text-sm shadow-sm transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2" %>
          </div>
        </div>

        <div class="flex items-center justify-between gap-3 border-t bg-muted/30 px-6 py-4">
          <div class="text-sm text-muted-foreground">
            <%= pluralize(@questions.size, "questão", "questões") %> encontradas
          </div>
          <div class="flex items-center gap-3">
            <%= link_to "Limpar filtros", questions_path, class: button_class(:ghost) %>
            <%= form.submit "Aplicar filtros", class: button_class(:primary) %>
          </div>
        </div>
      <% end %>
    </div>

    <div class="flex items-center gap-3 self-start">
      <%= button_tag "Configurar Prova", class: button_class(:secondary), type: :button %>
      <%= button_tag "Adicionar questão", class: button_class(:primary), type: :button %>
    </div>
  </div>

  <div class="overflow-x-auto">
    <div class="min-w-full lg:min-w-[720px]">
      <div class="<%= table_container_class %>">
        <table class="w-full border-collapse text-sm">
          <thead class="bg-muted/40 text-xs uppercase tracking-wide text-muted-foreground">
            <tr>
              <th scope="col" class="px-6 py-3 text-left font-semibold">ID</th>
              <th scope="col" class="px-6 py-3 text-left font-semibold">Título</th>
              <th scope="col" class="px-6 py-3 text-left font-semibold">Dificuldade</th>
              <th scope="col" class="px-6 py-3 text-left font-semibold">Área</th>
              <th scope="col" class="px-6 py-3 text-left font-semibold">Tema</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-border">
            <% if @questions.any? %>
              <% @questions.each do |question| %>
                <tr class="transition-colors hover:bg-muted/30">
                  <td class="px-6 py-4 font-medium text-foreground"><%= question[:id] %></td>
                  <td class="px-6 py-4 text-foreground"><%= question[:title] %></td>
                  <td class="px-6 py-4">
                    <span class="<%= difficulty_badge_class(question[:difficulty]) %>"><%= difficulty_label(question[:difficulty]) %></span>
                  </td>
                  <td class="px-6 py-4 text-foreground"><%= question[:area] %></td>
                  <td class="px-6 py-4 text-foreground"><%= question[:theme] %></td>
                </tr>
              <% end %>
            <% else %>
              <tr>
                <td colspan="5" class="px-6 py-10 text-center text-sm text-muted-foreground">
                  Nenhuma questão encontrada com os filtros selecionados.
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
