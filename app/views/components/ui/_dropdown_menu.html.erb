<div class="relative inline-flex" data-controller="dropdown-menu">
  <div data-action="click->dropdown-menu#toggle" data-dropdown-menu-target="trigger">
    <%= content_for(:dropdown_menu_trigger) %>
  </div>

  <div class="hidden fixed z-50 mt-2 w-48 origin-top-right rounded-md border border-border bg-popover p-1 text-popover-foreground shadow-md focus:outline-none"
       data-dropdown-menu-target="menu"
       data-action="click->dropdown-menu#select">
    <% if content_for?(:dropdown_menu_label) %>
      <div class="px-2 py-1.5 text-sm font-semibold text-muted-foreground"><%= content_for(:dropdown_menu_label) %></div>
    <% end %>
    <div class="flex flex-col gap-1">
      <%= content_for(:dropdown_menu_content) %>
    </div>
  </div>
</div>
